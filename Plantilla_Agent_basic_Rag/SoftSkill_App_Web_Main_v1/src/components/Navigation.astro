---
export interface Props {
  currentPage?: string;
}

const { currentPage = "" } = Astro.props;
---

<nav class="bg-white shadow-lg fixed top-0 w-full z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <span class="text-2xl font-bold text-blue-600">Knowledge</span>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/pensamiento-critico"
          class={`nav-link ${currentPage === "pensamiento-critico" ? "nav-link-active" : ""}`}
        >
          Pensamiento Crítico
        </a>
        <a
          href="/comunicacion"
          class={`nav-link ${currentPage === "comunicacion" ? "nav-link-active" : ""}`}
        >
          Comunicación
        </a>
        <a
          href="/creatividad"
          class={`nav-link ${currentPage === "creatividad" ? "nav-link-active" : ""}`}
        >
          Creatividad
        </a>
        <a
          href="/colaboracion"
          class={`nav-link ${currentPage === "colaboracion" ? "nav-link-active" : ""}`}
        >
          Colaboración
        </a>
      </div>
      <div
        class="flex items-center bg-white rounded-full shadow-md overflow-hidden"
      >
        <a
          href="/login"
          class="px-5 py-2 text-gray-800 font-medium text-base hover:text-blue-600 transition"
        >
          Login
        </a>
        <a
          href="/register"
          class="flex items-center gap-2 px-5 py-2 text-white font-semibold text-base rounded-full bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 transition"
        >
          Registrarse
          <span
            class="bg-white/30 rounded-full w-6 h-6 flex items-center justify-center"
          >
            ➜
          </span>
        </a>
      </div>
      <div class="md:hidden flex items-center">
        <button
          id="mobile-menu-button"
          class="text-gray-700 hover:text-blue-600 focus:outline-none focus:text-blue-600"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="md:hidden hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        <a
          href="/pensamiento-critico"
          class={`block px-3 py-2 rounded-md text-base font-medium ${currentPage === "pensamiento-critico" ? "nav-link-active" : "nav-link"}`}
        >
          Pensamiento Crítico
        </a>
        <a
          href="/comunicacion"
          class={`block px-3 py-2 rounded-md text-base font-medium ${currentPage === "comunicacion" ? "nav-link-active" : "nav-link"}`}
        >
          Comunicación
        </a>
        <a
          href="/creatividad"
          class={`block px-3 py-2 rounded-md text-base font-medium ${currentPage === "creatividad" ? "nav-link-active" : "nav-link"}`}
        >
          Creatividad
        </a>
        <a
          href="/colaboracion"
          class={`block px-3 py-2 rounded-md text-base font-medium ${currentPage === "colaboracion" ? "nav-link-active" : "nav-link"}`}
        >
          Colaboración
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
